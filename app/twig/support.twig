{% extends "layouts/app.twig" %}

{% block pageTitle %}Главная страница{% endblock %}


{% block content %}

    <main class="page-main">
        {% include "widgets/bredcrumbs.twig" with {"title": "Служба поддержки магазина BELLARUS"} %}
        <section class="support">
            <div class="uk-container uk-container-center">
                <div class="section-inner">
                    <div class="text-center mb20">
                        <a href="#" class="btn btn-primary dd-btn" id="set-inquiry-btn">Направить запрос</a>
                    </div>
                    <div class="mb40 dd-btn-target">
                        <div class="support-inquiry-form ">
                            <form action="">
                                <div class="support-inquiry-form__list mb40">
                                    <div class="support-inquiry-form__item">
                                            <select>
                                                <option>Категория</option>
                                                <option>Lorem ipsum dolor sit amet, consectetur.</option>
                                                <option>Количество</option>
                                            </select>
                                    </div>
                                    <div class="support-inquiry-form__item">
                                        <div class="input-wrapper">
                                            <input type="text" placeholder="Тема" />
                                        </div>
                                    </div>
                                    <div class="support-inquiry-form__item">
                                        <div class="input-wrapper">
                                            <textarea name="" id="" cols="30" rows="10" placeholder="Текст сообщения" ></textarea>
                                        </div>
                                    </div>
                                    <div class="support-inquiry-form__item">
                                        <div class="input-wrapper">
                                            <input type="text" placeholder="Ваше имя" />
                                        </div>
                                    </div>
                                    <div class="support-inquiry-form__item">
                                        <div class="input-wrapper">
                                            <input type="text" placeholder="Эл. почта" />
                                        </div>
                                    </div>
                                </div>
                                <div class="mb20">
                                    <label class="df fx-left"><input type="checkbox">Отсылать ответы на e-mail</label>
                                </div>
                                <div class="text-left support-review-block js-upload-drop fx fx-left fx-middle mb20">
                                    <input class="mr20 js-upload-select" type="file">
                                </div>
                                <div class="text-center">
                                    <button class="btn btn-primary md-full-width">Отправить</button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="support-inquiry-list">
                        {% for 1 in 1..3 %}
                            <div class="support-inquiry-item">
                                <div class="uk-grid" data-uk-grid-margin="">
                                    <div class="uk-width-1-1 uk-width-medium-7-10">
                                        <div class="uk-grid full-width">
                                            <div class="uk-width-2-10 fx fx-column fx-middle">
                                                <a href="#" class="text-brand text-underline mb15 support-inquiry-item__num">000250779</a>
                                                <i class="uk-icon uk-icon-lock text-brand fz40"></i>
                                            </div>
                                            <div class="uk-width-8-10 fx fx-middle">
                                                <div class="text-left">
                                                    <p>Заказ N 1007-10 от 10.07.2017 17:48:17 в "Интернет-магазин HostCMS" попрос по заказу тут</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="uk-width-1-1 uk-width-medium-3-10 fx fx-middle fx-justify">
                                        <div class="uk-grid  full-width">
                                            <div class="uk-width-2-10 md-text-center">
                                                <span class="support-inquiry-item__bl">2/1</span>
                                            </div>
                                            <div class="uk-width-8-10 fx fx-center md-fx-left">
                                                <span class="support-inquiry-item__date">10.07.2017 17:51:03</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                        <div class="support-inquiry-item support-inquiry-item-unlock">
                            <div class="uk-grid" data-uk-grid-margin="">
                                <div class="uk-width-1-1 uk-width-medium-7-10">
                                    <div class="uk-grid full-width">
                                        <div class="uk-width-2-10 fx fx-column fx-middle">
                                            <a href="#" class="text-brand text-underline mb15 support-inquiry-item__num">000250779</a>
                                            <i class="uk-icon uk-icon-unlock fz40 text-brand"></i>
                                        </div>
                                        <div class="uk-width-8-10 fx fx-column fx-start">
                                            <div class="text-left mb10">
                                                <p>Заказ N 1007-10 от 10.07.2017 17:48:17 в "Интернет-магазин HostCMS" попрос по заказу тут</p>
                                            </div>
                                            <div class="text-left">
                                                <a href="" class="btn btn-primary">Ожидаем Ваш ответ</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="uk-width-1-1 uk-width-medium-3-10 fx fx-middle fx-justify">
                                        <div class="uk-grid full-width">
                                            <div class="uk-width-2-10 md-text-center">
                                            <span class="support-inquiry-item__bl">2/1</span>
                                            </div>
                                            <div class="uk-width-8-10 fx fx-center md-fx-left">
                                                <span class="support-inquiry-item__date">10.07.2017 17:51:03</span>
                                            </div>
                                        </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

{% endblock %}